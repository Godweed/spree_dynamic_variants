  <% @product.option_types.each do |ot| %>
    <%= ot.presentation  %>
    <%= select("option_type", "option_value", ot.option_values.collect {|ov| [ ov.presentation, ov.id ] }) %>
    <br>
  <% end %>

  <%= render :partial => 'cart_form' %>

<% else %>
  <%= render :partial => 'cart_form' %>
<% end %>
